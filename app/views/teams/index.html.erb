<div class="row mb-4">
  <div class="col">
    <div class="d-flex justify-content-between align-items-center">
      <h1>NBA Teams</h1>
      <%= link_to new_team_path do %>
        <i class="bi bi-plus-square fs-3"></i>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="list-group">
      <% @teams.each do |team| %>
        <div class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <% if team.image_url.present? %>
                <%= image_tag team.image_url, class: "me-3", alt: team.name, style: "height: 60px; width: 60px; object-fit: contain;" %>
              <% else %>
                <div class="bg-light text-center me-3 d-flex align-items-center justify-content-center" style="height: 60px; width: 60px; border-radius: 8px;">
                  <i class="bi bi-shield" style="font-size: 1.5rem;"></i>
                </div>
              <% end %>
              <div>
                <h5 class="mb-1"><%= team.name %></h5>
                <p class="mb-1 text-muted"><%= pluralize(team.players.count, 'player') %></p>
              </div>
            </div>
            <div>
              <%= link_to "View Team", team_path(team), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
